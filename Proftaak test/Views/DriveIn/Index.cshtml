@using System.Web.Optimization
@model Proftaak_test.Controllers.DriveInController.TramViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>In/Uitrij</title>
</head>
<body>
    <div class="TramInfo">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2b/Tram_logo_Basel.png/674px-Tram_logo_Basel.png" width="100px" height="70px" />

        @using (Html.BeginForm("GetSectorForTram", "DriveIn", FormMethod.Post, new { @class = "TramInsert" }))
        {

            @Html.DropDownList("Trams", new SelectList(@Model.TramList, "Id", "Nummer"),"Selecteer tram", new { style = "width:220px; margin-bottom:10px; " })

            <input type="submit" value="Info" />
        }

    </div>
    <div class="SpoorInfo">
        <img src="http://cdn.mysitemyway.com/etc-mysitemyway/icons/legacy-previews/icons/rounded-glossy-black-icons-signs/095437-rounded-glossy-black-icon-signs-railroad-tracks.png" width="100px" height="100px" />
        <div class="SpoorInfoText">
            <p>@Model.sector.Spoor.Nummer</p>
        </div>
    </div>
    <div class="SectorInfo">
        <img src="https://cdn0.iconfinder.com/data/icons/huge-basic-icons-part-2/512/Radar.png" width="100px" height="80px" />
        <div class="SectorInfoText">
            <p>@Model.sector.Nummer</p>
        </div>
    </div>
</body>
</html>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}